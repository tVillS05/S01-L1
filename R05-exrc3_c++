#include <iostream>
using namespace std;

int main() {
    int qtd;
    cout << "Digite quantas notas voce quer inserir: ";
    cin >> qtd;

    float soma = 0;
    int validas = 0;

    for (int i = 0; i < qtd; i++) {
        float nota;
        do {
            cout << "Digite a nota(0 a 10): ";
            cin >> nota;
        } while (nota < 0 || nota > 10);

        soma += nota;
        validas++;
    }

    float media = soma / validas;
    cout << "Media final = " << media << endl;

    if (media >= 7)
        cout << "Aprovado" << endl;
    else
        cout << "Reprovado" << endl;

    return 0;
}
