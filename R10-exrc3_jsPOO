class Diario {
    #autorSecreto = "Dipper";

    constructor() {
        this.enigmas = new Map([
            ["cifra1", "gnome"],
            ["cifra2", "bill cipher"]
        ]);
    }

    decodificar(chave, num, autor) {
        if (autor !== this.#autorSecreto) return "Acesso negado";
        const enigmasArray = [...this.enigmas.values()];
        if (num < 0 || num >= enigmasArray.length) return "Índice inválido";
        return `Enigma: ${enigmasArray[num]}`;
    }
}

class Personagem {
    constructor(nome) {
        this.nome = nome;
    }
}

class CabanaMisterio {
    constructor(funcionarios = []) {
        this.funcionarios = funcionarios;
    }

    listarFuncionarios() {
        return this.funcionarios;
    }
}

const diario = new Diario();
console.log(diario.decodificar("cifra2", 1, "Dipper"));

const cabana = new CabanaMisterio([
    new Personagem("Soos"),
    new Personagem("Wendy")
]);

console.log(cabana.listarFuncionarios().map(f => f.nome));
