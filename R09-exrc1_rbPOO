class Drink
  attr_reader :nome

  def initialize(nome, preco_base)
    @nome = nome
    self.preco_base = preco_base
  end

  def preco_base
    @preco_base
  end

  def preco_base=(valor)
    if valor > 0
      @preco_base = valor
    else
      puts("Preço inválido! Usando valor padrão de 10.")
      @preco_base = 10
    end
  end

  def to_s
    "Drink: #{@nome} | Preço base: R$#{@preco_base}"
  end
end

class DrinkLenda < Drink
  def initialize(nome, preco_base, anos_desde_criacao)
    super(nome, preco_base)
    @anos_desde_criacao = anos_desde_criacao
  end

  def preco_final
    @preco_base + (5 * @anos_desde_criacao)
  end

  def to_s
    "Drink lendário #{@nome}, preço final: R$#{preco_final}"
  end
end

puts("Digite o nome do drink:")
nome = gets.chomp
puts("Digite o preço base:")
preco = gets.chomp.to_f
puts("Digite os anos desde a criação:")
anos = gets.chomp.to_i

drink = DrinkLenda.new(nome, preco, anos)
puts(drink.to_s)
