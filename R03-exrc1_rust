use std::io::{self, Write};

fn verificar(senha: &str) -> bool {
    if senha.len() < 8 {
        return false;
    }

    let mut numero = false;
    let mut maiusc = false;
    let mut minus = false;

    for c in senha.chars() {
        if c.is_ascii_digit() {
            numero = true;
        }
        if c.is_ascii_uppercase() {
            maiusc = true;
        }
        if c.is_ascii_lowercase() {
            minus = true;
        }
    }

    numero && maiusc && minus
}

fn main() {
    loop {
        print!("Digite uma senha: "); // usar print, não println
        io::stdout().flush().unwrap(); // força a exibição imediata

        let mut senha = String::new();
        io::stdin().read_line(&mut senha).expect("Erro ao ler");

        let senha = senha.trim();

        if verificar(senha) {
            println!("\nSenha válida! Acesso concedido.");
            break;
        } else {
            println!("\nSenha inválida! Tente novamente.\n");
        }
    }
}
